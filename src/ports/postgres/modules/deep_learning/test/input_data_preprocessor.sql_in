-- Divide two integers and round up to the nearest integer
CREATE FUNCTION divide_roundup(numerator INTEGER, denominator INTEGER)
RETURNS INTEGER AS
$$
    SELECT ($1 / $2 + 1);
$$ LANGUAGE SQL;

-- COUNT(*) returns type BIGINT, so this will cast it to INTEGER first
CREATE FUNCTION divide_roundup(numerator INTEGER, denominator BIGINT)
RETURNS INTEGER AS
$$
    SELECT divide_roundup($1, $2::INTEGER);
$$ LANGUAGE SQL;

-- For postgres, just need total rows / buffer_size rounded up.
-- For greenplum, we take that result, and round up to the nearest multiple
--   of num_segments.
CREATE FUNCTION num_buffers(rows_in_tbl INTEGER, buffer_size INTEGER)
RETURNS INTEGER AS
$$
m4_ifdef(<!__POSTGRESQL__!>,
    <! SELECT divide_roundup($1, $2); !>,
    <! SELECT (COUNT(*)::INTEGER) * divide_roundup(divide_roundup($1, $2), COUNT(*)) FROM gp_segment_configuration
                                                WHERE role = 'p' AND content != -1; !>
)
$$ LANGUAGE SQL;

